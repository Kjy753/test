<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffffff"
            android:gravity="center_horizontal"
            app:srcCompat="?attr/actionModeCloseDrawable"  />


        <TextView
            android:layout_width="84.7dp"
            android:layout_height="22.7dp"
            android:layout_marginTop="22.7dp"
            android:layout_marginLeft="80dp"
            android:textColor="#000000"
            android:text="개인 정보" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dedede"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="113.3dp"
            android:layout_height="113.3dp"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/profile" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="82dp"
            android:layout_height="23.7dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:text="Name" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="20dp"
            android:layout_height="23.7dp"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:text="님" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="100dp"
            android:layout_height="43.3dp"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/corners_bl"
            app:srcCompat="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dedede"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/usepo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:text="포인트사용내역" />
        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#dedede"/>
        <Button
            android:id="@+id/myact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:text="MY활동" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dedede"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:text="보유 :" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:textColor="#faaa1f"
            android:text="" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#faaa1f"
            android:text="P" />
        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:textColor="#ffffff"
            android:background="@drawable/corners_gr"
            android:text="충전하기" />






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="150dp"
            android:background="#faaa1f"
            android:textColor="#ffffff"
            android:text="최근활동"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:background="#a8a8a8"
                android:text="날짜" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:background="#a8a8a8"
                android:text="배송물품" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gfdhgfdgfdgfdgfdgfdgdfgdf" />


    </LinearLayout>

</LinearLayout>