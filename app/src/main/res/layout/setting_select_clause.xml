<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeff1"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#faaa1f">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:background="#faaa1f"
            android:gravity="center_horizontal"
            app:srcCompat="?attr/actionModeCloseDrawable"  />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="26.2sp"
            android:textColor="#ffffff"
            android:text="이용약관" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="104dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:text="개인정보 수집 이용을 위한 동의 " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#faaa1f"
            android:gravity="center_horizontal"
            android:text="(필수)" />

        <Button
            android:id="@+id/button"
            android:layout_width="64dp"
            android:layout_height="29dp"
            android:textSize="13.3sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/allshow"
            android:text="전체보기" />

    </LinearLayout>

    <TextView
        android:id="@+id/editText"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/corners_wh"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:text="    내 프로필, 구입한 아이템,  그  외 사용자가
설정한 모든정보가 사라지고 복구가 불가능합
니다. "
        android:focusableInTouchMode="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="개인정보 수집 이용을 위한 동의 " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#faaa1f"
            android:gravity="center_horizontal"
            android:text="(필수)" />

        <Button
            android:id="@+id/button1"
            android:layout_width="64dp"
            android:layout_height="29dp"
            android:textSize="13.3sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/allshow"
            android:text="전체보기" />

    </LinearLayout>

    <TextView
        android:id="@+id/editText1"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/corners_wh"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:text="    내 프로필, 구입한 아이템,  그  외 사용자가
설정한 모든정보가 사라지고 복구가 불가능합
니다. "
        android:focusableInTouchMode="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="개인정보 수집 이용을 위한 동의 " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#faaa1f"
            android:gravity="center_horizontal"
            android:text="(필수)" />

        <Button
            android:id="@+id/button2"
            android:layout_width="64dp"
            android:layout_height="29dp"
            android:textSize="13.3sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/allshow"
            android:text="전체보기" />

    </LinearLayout>

    <TextView
        android:id="@+id/editText2"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/corners_wh"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:text="    내 프로필, 구입한 아이템,  그  외 사용자가
설정한 모든정보가 사라지고 복구가 불가능합
니다. "
        android:focusableInTouchMode="false"
        />




</LinearLayout>