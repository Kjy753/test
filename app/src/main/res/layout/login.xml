<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fef2e9"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="172dp"
        android:layout_height="205dp"
        android:layout_marginTop="129dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/login_main" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/id"
                android:layout_width="215.7dp"
                android:layout_height="45.7dp"
                android:background="@drawable/edge_gr"
                android:textColorHint="#938e8e"
                android:hint="아이디"
                android:ems="10"

                />

            <EditText
                android:id="@+id/pw"
                android:layout_width="215.7dp"
                android:layout_height="45.7dp"
                android:background="@drawable/edge_gr"
                android:textColorHint="#938e8e"
                android:hint="********"
                android:ems="10"
                 />

        </LinearLayout>

        <ImageButton
            android:id="@+id/login"
            android:layout_width="92dp"
            android:layout_height="100dp"
            android:padding="0dp"
            app:srcCompat="@drawable/login" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1f160f"
            android:textSize="13.8sp"
            android:text="자동로그인" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1f160f"
            android:textSize="12.5sp"
            android:text="로그인정보를 잊으셨나요?" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="339.3dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_or"
        android:textSize="24sp"
        android:textColor="#fffffe"
        android:text="회원가입" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vvv"
        android:text=""/>



</LinearLayout>